<Window x:Class="AgentApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AgentApp"
        Title="Agent GUI" Height="350" Width="525">
    <Grid>
        <Label Content="File Extension:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <ComboBox x:Name="FileExtensionComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,10,0,0" Width="120">
            <ComboBoxItem Content=".txt"/>
            <ComboBoxItem Content=".png"/>
            <ComboBoxItem Content=".jpeg"/>
        </ComboBox>

        <Label Content="File Path:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox x:Name="FilePathTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,50,0,0" Width="250"/>

        <Button Content="Browse" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="370,50,0,0" Width="75" Click="BrowseButton_Click"/>
        <Button Content="Send" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0" Width="75" Click="SendButton_Click"/>

        <TextBlock x:Name="StatusTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0" TextWrapping="Wrap" Width="480"/>
    </Grid>
</Window>
