<Window x:Class="DriverCommunicator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Driver Communicator" Height="200" Width="400">
    <Grid>
        <TextBox Name="InputTextBox" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0"
                 VerticalAlignment="Top" Width="360"/>
        <Button Content="Send" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100"
                Height="30" Margin="10,50,0,0" Click="SendButton_Click"/>
        <Label Content="Response:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0"/>
        <TextBox Name="ResponseTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0"
                 Width="360" Height="30" IsReadOnly="True"/>
    </Grid>
</Window>